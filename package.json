{
	"name": "pack-vsix",
	"displayName": "Pack VSIX",
	"description": "Build your extensions right from the editor.",
	"version": "0.0.8",
	"publisher": "igordvlpr",
	"license": "SEE LICENSE IN LICENSE.txt",
	"author": {
		"name": "Igor DimitrijeviÄ‡"
	},
	"icon": "assets/icon.png",
	"engines": {
		"vscode": "^1.74.0"
	},
	"bugs": {
		"url": "https://github.com/igorskyflyer/vscode-pack-vsix/issues",
		"email": "igor.dvlpr@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/igorskyflyer/vscode-pack-vsix.git"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"vsix",
		"extension",
		"build",
		"developer",
		"tool"
	],
	"activationEvents": [
		"workspaceContains:src/extension.ts",
		"workspaceContains:src/extension.js",
		"onCommand:extension.buildExtension"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.buildExtension",
				"title": "Build extension"
			}
		],
		"keybindings": [
			{
				"command": "extension.buildExtension",
				"key": "ctrl+alt+p",
				"mac": "cmd+alt+p",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^3.6.4",
		"vscode": "^1.1.36",
		"@types/node": "^12.11.0"
	}
}
